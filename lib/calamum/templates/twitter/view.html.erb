<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= @resource.uri %></title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <link type="text/css" rel="stylesheet" href="assets/css/main.css" />
  </head>
  <body>
    <div id="page">

      <div id="header-outer">
        <div id="header">
          <a href="index.html" id="logo" title="Home"><%= @name %></a>

          <ul id="title-nav">
            <li><a href="authentication.html">Авторизация</a></li>
            <li><a href="index.html">Ресурсы</a></li>
            <li><a href="errors.html">Ошибки</a></li>
          </ul>
        </div>
      </div>

      <div id="content-outer">
        <div class="page-header">
          <h1><%= @resource.action %> <%= @resource.uri %></h1>
        </div>

        <div id="content-main">
          <div class="field field-el">
            <h2>Описание</h2>
            <p><%= @resource.description %></p>
          </div>

      	  <% unless @resource.headers.empty? %>

            <div class="field">
              <h2>Заголовки</h2>
              <div class="odd">
                <% @resource.headers.each do |key, content| %>
                  <div class="parameter">
                    <span class="param"><%= key %></span>
                    <p><%= content %></p>
                  </div>
                <% end %>
              </div>
            </div>

      	  <% end %>

          <% unless @resource.params.empty? %>

            <div class="field">
              <h2>Параметры</h2>
              <div class="odd">
                <% @resource.params.each do |key, content| %>
                  <div class="parameter">
                    <span class="param"><%= key %>
                      <span><%= content['required'] ? 'обязательный параметр' : 'опционально' %>, тип: <%= content['type'] %></span>
                    </span>
                    <p><%= content['description'] %></p>
                  </div>
                <% end %>
              </div>
            </div>

          <% end %>

          <% if @resource.request %>
            <div class="group-example-request">
              <h2>Запрос</h2>
              <div class="content">
                <pre class="prettyprint"><%= @resource.request %></pre>
              </div>
            </div>
          <% end %>

          <% if @resource.response %>
            <div class="group-example-request">
              <h2>Ответ</h2>
              <div class="content">
                <pre class="prettyprint"><%= pj @resource.response %></pre>
              </div>
            </div>
          <% end %>
        </div>

        <div id="sidebar-last">
          <div class="block api-doc-block">
            <h2>Информация</h2>
            <table>
              <tbody>
                <tr>
                  <td>Версия</td>
                  <td><%= @version %></td>
                </tr>
                <tr>
                  <td>HTTP метод</td>
                  <td><%= @resource.action %></td>
                </tr>
                <tr>
                  <td>Авторизация</td>
                  <td><%= @resource.auth == 'true' ? 'требуется' : 'нет' %></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <div id="footer-outer">
        <div id="footer"><%= @copyright %></div>
      </div>

    </div>
    <script src="https://google-code-prettify.googlecode.com/svn/loader/run_prettify.js"></script>
  </body>
</html>
